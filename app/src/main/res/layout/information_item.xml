<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/rl_information"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:text="临床第一阶段模拟考试"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/textView_information_name"/>

        <TextView
            android:text="考试时间:2016/11/25 10:18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/textView_information_name"
            android:layout_alignRight="@+id/textView_information_name"
            android:layout_alignEnd="@+id/textView_information_name"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/textView_information_time"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>