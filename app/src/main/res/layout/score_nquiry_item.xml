<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/rl_score_inquiry"
              android:layout_width="match_parent"
              android:layout_height="120dp">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:text="中医理论基础摸底考试"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/textView_name"/>

        <TextView
            android:text="考试时间:2016/11/25 10:18"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name"
            android:layout_alignLeft="@+id/textView_name"
            android:layout_alignStart="@+id/textView_name"
            android:layout_marginTop="16dp"
            android:id="@+id/textView_time"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/video"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/imageView_go"
            android:layout_alignBottom="@+id/textView_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="考试时长:120分钟"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_time"
            android:layout_alignLeft="@+id/textView_name"
            android:layout_alignStart="@+id/textView_name"
            android:layout_marginTop="10dp"
            android:id="@+id/textView_time_len"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>