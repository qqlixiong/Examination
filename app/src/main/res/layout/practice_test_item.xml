<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:id="@+id/rl_practice_test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="临床第一阶段模拟考试"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/textView_name"/>

        <TextView
            android:text="考试时间:2016/11/25 10:18-2016/11/26 10:18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/textView_time"
            android:layout_below="@+id/textView_name"
            android:layout_alignLeft="@+id/textView_name"
            android:layout_alignStart="@+id/textView_name"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/video"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/imageView3"
            android:layout_above="@+id/textView_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>