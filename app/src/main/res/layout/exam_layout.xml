        android:layout_height="wrap_content"
        android:src="@drawable/pr5"
        android:id="@+id/iv_a"/>

    <include layout="@layout/exam_one_layout"/>

    <include layout="@layout/exam_tow_layout"/>

    <include layout="@layout/exam_three_layout"/>
