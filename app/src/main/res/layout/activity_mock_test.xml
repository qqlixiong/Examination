<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_mock_test"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shlw.cloudclassroom.home.student.activity.MockTestActivity">

    <include layout="@layout/titlebar"
             android:id="@+id/title_bar"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_marginTop="16dp"
        android:background="@drawable/mock_test_bg"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/title_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="选择课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"/>

        <Spinner
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:text="单选题："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:background="@drawable/mock_test_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="多选题："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="16dp"
        android:id="@+id/textView17"/>

    <TextView
        android:text="填空题："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:layout_marginTop="16dp"
        android:id="@+id/textView18"/>

    <TextView
        android:text="共用答案："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="16dp"
        android:id="@+id/textView22"/>

    <TextView
        android:text="共用题干："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"/>

    <TextView
        android:text="案例分析："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"/>

    <TextView
        android:text="名词解释："
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:id="@+id/editText3"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:layout_width="200dp"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:id="@+id/editText4"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:layout_width="200dp"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_alignTop="@+id/textView20"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:id="@+id/editText5"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:layout_width="200dp"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:id="@+id/editText6"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/mock_test_bg"
        android:layout_width="200dp"
        android:hint="填写数量"
        android:textColorHint="@color/colorGray"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignRight="@+id/editText6"
        android:layout_alignEnd="@+id/editText6"
        android:id="@+id/editText7"/>

    <Button
        android:text="开始测试"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/button_start"/>

</RelativeLayout>
