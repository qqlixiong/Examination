<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:id="@+id/rl_child_question_bank">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/subjects"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:id="@+id/imageView_pic"/>

        <TextView
            android:text="病理学"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/textView_name"
            android:layout_alignBottom="@+id/imageView_pic"
            android:layout_toRightOf="@+id/imageView_pic"
            android:layout_toEndOf="@+id/imageView_pic"
            android:layout_marginBottom="27dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/video"
            android:id="@+id/imageButton_go"
            android:layout_alignBottom="@+id/imageView_pic"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="14dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>