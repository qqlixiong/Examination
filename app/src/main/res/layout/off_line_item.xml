<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="80dp"
    android:id="@+id/rl_exams_center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/subjects"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/imageView_pic"/>

    <TextView
        android:text="病理学"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView_name"
        android:layout_alignTop="@+id/imageView_pic"
        android:layout_toRightOf="@+id/imageView_pic"
        android:layout_toEndOf="@+id/imageView_pic"/>

    <TextView
        android:text="共有试题 : 888题"
        android:textColor="@color/colorGrayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_num"
        android:layout_below="@+id/textView_name"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/video"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/imageButton_go"
        android:layout_alignTop="@+id/textView_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>